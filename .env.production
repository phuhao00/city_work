# City Work 平台 - 生产环境配置

# 环境变量配置
NODE_ENV=production
PORT=3000

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/citywork_prod

# JWT配置
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# API配置
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# 安全配置
SESSION_SECRET=your_session_secret_here

# 第三方服务配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# 监控和日志
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# 缓存配置
CACHE_TTL=3600


# 搜索引擎配置
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX=citywork_jobs

# 通知配置
PUSH_NOTIFICATION_KEY=your_push_key_here
EMAIL_TEMPLATES_PATH=./templates/emails

# 性能配置
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=86400

# 安全头配置
CORS_ORIGIN=https://your-domain.com
HELMET_CSP_DIRECTIVES=default-src 'self'